<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="#fff"
    android:orientation="horizontal"
    android:elevation="20dp"
    android:layout_margin="4dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="horizontal"
    android:weightSum="6"
    android:id="@+id/llContent"
    >

    <ImageView
        android:layout_weight="1.5"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/imgBookImage"
        android:layout_margin="0dp"
        android:padding="5dp"
        android:scaleType="centerCrop">
    </ImageView>

    <RelativeLayout
        android:layout_weight="3.3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/imgBookImage"
        >


    <TextView
        android:layout_alignWithParentIfMissing="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book name"
        android:textSize="15sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:id="@+id/tv_rec_row_item_bookname"
        >
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="author"
        android:textSize="16sp"
        android:textStyle="italic"
        android:padding="8dp"
        android:id="@+id/tv_rec_row_item_author"
        android:layout_below="@+id/tv_rec_row_item_bookname">
    </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1000 rs"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/design_default_color_primary"
            android:padding="8dp"
            android:id="@+id/tv_rec_row_item_price"
            android:layout_below="@+id/tv_rec_row_item_author" />
    </RelativeLayout>

    <TextView
        android:layout_weight="1.2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="4.5"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#ffca28"
        android:padding="4dp"
        android:id="@+id/txtBookRating" />

</LinearLayout>
</androidx.cardview.widget.CardView>